<HomeScreen>:
    GridLayout:
        cols:1
        spacing:20
        padding:20
        canvas.before:
            Color: 
                rgba: (1, 1, 1, 1) 
            Rectangle: 
                source:"homescreen.png"
                size: root.width, root.height 
                pos: self.pos 
        Label:
            text:" "

        Button:
            text:"Let`s Get Started! "
            font_name: "Ultra.ttf"
            size_hint_y: None
            height: '48dp'
            background_color: 0.7, 0, 0, 1
            on_press: app.root.current = 'stylescreen'
            on_press: app.root.transition.direction = "up"
            pos_hint_y: 1
            pos_hint: {'center_x': 0.5, 'y': 0.5}


<StyleScreen>:
    GridLayout:
        cols: 1
        spacing: 20
        padding: 20
        canvas.before:
            Color: 
                rgba: (1, 1, 1, 1)
            Rectangle: 
                source: "background.png"
                size: self.size
                pos: self.pos

        Button:
            text: "choose your image from device"
            font_size: 18
            size_hint_y: None
            height: 50
            background_color: (0, 0, 0, 1)
            color: (1, 1, 1, 1)
            on_release: root.select_content_image()

        Label:
            text: "[b][color=#FF9933]choose a style[/color][/b][color=#000000] image[/color]"
            markup: True
            font_size: 16
            halign: 'left'
            valign: 'middle'
            size_hint_y: None
            height: 50

        ScrollView:
            GridLayout:
                cols: 2
                spacing: 20
                size_hint_y: None
                height: self.minimum_height
                padding: 10

                # Rajputana
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    ClickableImage:
                        source: 'styles/rajputana.jpg'
                        size_hint: None, None
                        size: 120, 120
                        on_release: root.set_style('styles/rajputana.jpg')
                    Label:
                        text: "Rajputana"
                        size_hint_y: None
                        height: 30
                        font_size: 14
                        color: (1, 0.4, 0, 1)

                # Picasso
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    ClickableImage:
                        source: 'styles/picasso.jpg'
                        size_hint: None, None
                        size: 120, 120
                        on_release: root.set_style('styles/picasso.jpg')
                    Label:
                        text: "Picasso"
                        size_hint_y: None
                        height: 30
                        font_size: 14
                        color: (1, 0.4, 0, 1)

                # Van Gogh
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    ClickableImage:
                        source: 'styles/van_gogh.jpg'
                        size_hint: None, None
                        size: 120, 120
                        on_release: root.set_style('styles/van_gogh.jpg')
                    Label:
                        text: "Van Gogh"
                        size_hint_y: None
                        height: 30
                        font_size: 14
                        color: (1, 0.4, 0, 1)

                # kalighat
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    ClickableImage:
                        source: 'styles\kalighat.jpeg'
                        size_hint: None, None
                        size: 120, 120
                        on_release: root.set_style('styles/kalighat.jpeg')
                    Label:
                        text: "Kalighat"
                        size_hint_y: None
                        height: 30
                        font_size: 14
                        color: (1, 0.4, 0, 1)

                #kangra
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    ClickableImage:
                        source: 'styles\kangra.jpg'
                        size_hint: None, None
                        size: 120, 120
                        on_release: root.set_style('styles/kangra.jpg')
                    Label:
                        text: "Kangra"
                        size_hint_y: None
                        height: 30
                        font_size: 14
                        color: (1, 0.4, 0, 1)
                
                #Mona lisa
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 160
                    ClickableImage:
                        source: 'styles\mona_lisa.jpg'
                        size_hint: None, None
                        size: 120, 120
                        on_release: root.set_style('styles/mona_lisa.jpg')
                    Label:
                        text: "Mona Lisa"
                        size_hint_y: None
                        height: 30
                        font_size: 14
                        color: (1, 0.4, 0, 1)



        Button:
            text: "or choose your own style image from device"
            font_size: 16
            size_hint_y: None
            height: 60
            background_color: (1, 0.4, 0, 1)
            color: (1, 1, 1, 1)
            on_release: root.select_style_image()



<DisplayScreen>:
    name: "result"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: (245/255, 245/255, 220/255, 1)  # Light Beige
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            Button:
                text: "‚Üê Back"
                size_hint_x: None
                width: 100
                background_color: (1, 0.4, 0, 1)
                color: (1, 1, 1, 1)
                on_release:
                    root.manager.current = "stylescreen"

            Label:
                text: "Displaying merged style image"
                font_size: 18
                color: (0.2, 0.2, 0.2, 1)
                halign: 'left'

        Image:
            id: result_image
            source: ''
            allow_stretch: True
            keep_ratio: True

        Button:
            text: "Download Styled Image"
            size_hint_y: None
            height: 50
            font_size: 16
            background_color: (1, 0.4, 0, 1)
            color: (1, 1, 1, 1)
            on_release: root.download_image()










<RootWidget>:
    HomeScreen:
        name: "homescreen"
    StyleScreen:
        name: "stylescreen"
    DisplayScreen:
        name: "displayscreen"